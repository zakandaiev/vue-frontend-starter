{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "ignorePatterns": [
    "**/build/**/*",
    "**/coverage/**/*",
    "**/docs/**/*",
    "**/dist/**/*",
    "**/dist-ssr/**/*",
    "**/node_modules/**/*"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    // "camelcase": 0,
    "consistent-return": 0,
    // "global-require": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    // "import/no-unresolved": 0,
    // "linebreak-style": 0,
    "max-len": 0,
    "no-param-reassign": 0,
    // "no-promise-executor-return": 0,
    // "no-undef": 0,
    "no-unneeded-ternary": 0,
    // "no-unused-vars": 0,
    "no-use-before-define": 0,
    "vue/multi-word-component-names": 0,
    "vue/no-multiple-template-root": 0,
    "vue/no-v-for-template-key": 0,
    "vue/no-v-model-argument": 0
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@",
            "./src"
          ]
        ]
      }
    }
  }
}
